<h1>Create New Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['pending', 'completed', 'postponed'] %>
  </div>

  <div>
    <%= form.submit "Create" %>
  </div>
<% end %>

<%= link_to "Back", tasks_path %>
